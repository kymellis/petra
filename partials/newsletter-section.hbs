      <div class='c-section c-section--newsletter'>
        <div class='o-grid'>
          <div class='c-content u-align-center'>
            <p class='u-font-heading'>{{t 'Start your journey' }}</p>
            {{> newsletter-form inputLabel='global-newsletter-form'}}
              <p class='u-font-small'>{{t 'By subscribing, I confirm that I have read and agree to the PMA'}} <a href='/agreement'>Membership Agreement</a></p>
          </div>
        </div>
      </div>
    {{/unless}}
  {{/if}}
{{/unless}}


