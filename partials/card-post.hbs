<div class='js-card c-card-post {{ post_class }} {{ card_post_size }} {{#unless feature_image}} c-card-post--has-no-image {{/unless}}'>
  {{#if feature_image}}
    <div class='c-card-post__media'>
      <img
        class='c-card-post__image lazyload'
        alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
        data-src='{{ img_url feature_image size='feature-image-large' format='webp' }}'
      >
    </div>
  {{/if}}

  <div class='c-card-post__meta'>
    {{#if tags}}<div class='c-card-post__tag'>{{ tags limit='1' }}</div>{{/if}}
    <time class='c-card-post__date' datetime='{{ date format='YYYY-MM-DD' }}'>{{ date format='MMM D, YYYY' }}</time>
    {{#if reading_time}}<div class='c-card-post__reading-time'>{{ reading_time minute=(t '1 min') minutes=(t '% min') }}</div>{{/if}}
  </div>

  <h3 class='c-card-post__title {{ card_post_size }}'><a href='{{ url }}'>{{ title }}</a></h3>
</div>